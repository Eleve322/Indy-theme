{%- liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign description = section.settings.description
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign image = section.settings.image
  assign image_mobile = section.settings.image_mobile
  assign text_position = section.settings.text_position
  assign overlay_opacity = section.settings.overlay_opacity
-%}

<div class="premium-hero">
  <div class="premium-hero-image-wrapper">
    {%- if image != blank -%}
      <picture>
        {%- if image_mobile != blank -%}
          <source media="(max-width: 768px)" srcset="{{ image_mobile | image_url: width: 800 }}">
        {%- endif -%}
        <img 
          src="{{ image | image_url: width: 2400 }}" 
          srcset="{{ image | image_url: width: 1200 }} 1200w,
                  {{ image | image_url: width: 1800 }} 1800w,
                  {{ image | image_url: width: 2400 }} 2400w"
          sizes="100vw"
          alt="{{ heading }}"
          class="premium-hero-image"
        >
      </picture>
    {%- else -%}
      <div class="premium-hero-placeholder"></div>
    {%- endif -%}
    <div class="premium-hero-overlay" style="opacity: {{ overlay_opacity | divided_by: 100.0 }};"></div>
  </div>

  <div class="premium-hero-content {{ text_position }}">
    <div class="container">
      <div class="premium-hero-text">
        {%- if subheading != blank -%}
          <p class="premium-hero-subtitle">{{ subheading }}</p>
        {%- endif -%}
        {%- if heading != blank -%}
          <h1 class="premium-hero-heading">{{ heading }}</h1>
        {%- endif -%}
        {%- if description != blank -%}
          <p class="premium-hero-description">{{ description }}</p>
        {%- endif -%}
        {%- if button_text != blank -%}
          <a href="{{ button_link }}" class="premium-hero-btn">
            {{ button_text }}
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

<style>
  .premium-hero {
    position: relative;
    width: 100%;
    min-height: 600px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .premium-hero-image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .premium-hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .premium-hero-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1F2937 0%, #374151 100%);
  }

  .premium-hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 100%);
  }

  .premium-hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: 80px 0;
  }

  .premium-hero-content.text-left .premium-hero-text {
    text-align: left;
    max-width: 600px;
  }

  .premium-hero-content.text-center .premium-hero-text {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .premium-hero-content.text-right .premium-hero-text {
    text-align: right;
    max-width: 600px;
    margin-left: auto;
  }

  .premium-hero-subtitle {
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: #FFFFFF;
    margin: 0 0 16px;
    opacity: 0.9;
  }

  .premium-hero-heading {
    font-size: clamp(40px, 6vw, 72px);
    font-weight: 800;
    color: #FFFFFF;
    margin: 0 0 20px;
    letter-spacing: -2px;
    line-height: 1.1;
    text-shadow: 0 2px 20px rgba(0,0,0,0.3);
  }

  .premium-hero-description {
    font-size: clamp(16px, 2vw, 20px);
    color: #FFFFFF;
    margin: 0 0 32px;
    line-height: 1.6;
    opacity: 0.95;
  }

  .premium-hero-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    background: #FFFFFF;
    color: #111827;
    font-size: 16px;
    font-weight: 700;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(0,0,0,0.15);
  }

  .premium-hero-btn:hover {
    background: #111827;
    color: #FFFFFF;
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.25);
    gap: 12px;
  }

  .premium-hero-btn svg {
    transition: transform 0.3s ease;
  }

  .premium-hero-btn:hover svg {
    transform: translateX(3px);
  }

  @media (max-width: 768px) {
    .premium-hero {
      min-height: 500px;
    }

    .premium-hero-content {
      padding: 60px 0;
    }

    .premium-hero-content.text-left .premium-hero-text,
    .premium-hero-content.text-right .premium-hero-text {
      text-align: center;
      margin: 0 auto;
    }

    .premium-hero-subtitle {
      font-size: 12px;
      letter-spacing: 2px;
      margin-bottom: 12px;
    }

    .premium-hero-description {
      margin-bottom: 24px;
    }

    .premium-hero-btn {
      padding: 14px 28px;
      font-size: 15px;
    }
  }

  @media (max-width: 480px) {
    .premium-hero {
      min-height: 450px;
    }
  }
</style>

{% schema %}
{
  "name": "Premium Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Hero image (Mobile - optional)"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 40
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Nueva Colección"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Descubrí Lo Último en Estilo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Las mejores marcas de zapatillas y ropa deportiva en un solo lugar"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Comprar Ahora"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text position",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ],
      "default": "text-center"
    }
  ],
  "presets": [
    {
      "name": "Premium Hero"
    }
  ]
}
{% endschema %}

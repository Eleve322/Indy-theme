{%- liquid
  assign heading = section.settings.heading
  assign description = section.settings.description
  assign container = section.settings.container
-%}

<div class="clean-cat-section" style="background: {{ section.settings.bg_color }}; padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;">
  <div class="{{ container }}">
    {%- if heading != blank or description != blank -%}
      <div class="clean-cat-header" style="text-align: center; margin-bottom: 40px;">
        {%- if heading != blank -%}
          <h2 style="font-size: 28px; font-weight: 700; color: #111827; margin: 0 0 8px;">{{ heading }}</h2>
        {%- endif -%}
        {%- if description != blank -%}
          <p style="font-size: 16px; color: #6B7280; margin: 0;">{{ description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="clean-cat-grid">
      {%- for block in section.blocks -%}
        {%- liquid
          assign cat_title = block.settings.title
          assign cat_collection = block.settings.collection
          assign cat_image = block.settings.image
        -%}
        
        <a href="{{ routes.collections_url }}/{{ cat_collection }}" class="clean-cat-card" {{ block.shopify_attributes }}>
          <div class="clean-cat-icon-wrapper">
            {%- if cat_image != blank -%}
              <div class="clean-cat-image">
                <img 
                  src="{{ cat_image | image_url: width: 400 }}" 
                  alt="{{ cat_title }}"
                  width="400"
                  height="400"
                  loading="lazy"
                >
              </div>
            {%- else -%}
              <div class="clean-cat-icon">
                {%- case cat_collection -%}
                  {%- when 'zapatillas' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M2 17s.9-3.5 3-4.5c.5-.3 1-.5 1.5-.5 1.5 0 2.5 1 4 1s2.5-1 4-1 2.5 1 4 1 2.5-1 4-1c.5 0 1 .2 1.5.5 2.1 1 3 4.5 3 4.5"/><path d="M2 17v3c0 .6.4 1 1 1h18c.6 0 1-.4 1-1v-3"/><path d="M12 12V7"/><path d="M8 12V9"/><path d="M16 12V9"/></svg>
                  {%- when 'remeras' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20.38 3.46 16 2a4 4 0 0 1-8 0L3.62 3.46a2 2 0 0 0-1.34 2.23l.58 3.47a1 1 0 0 0 .99.84H6v10c0 1.1.9 2 2 2h8a2 2 0 0 0 2-2V10h2.15a1 1 0 0 0 .99-.84l.58-3.47a2 2 0 0 0-1.34-2.23z"/></svg>
                  {%- when 'buzos' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20.38 3.46 16 2a4 4 0 0 1-8 0L3.62 3.46a2 2 0 0 0-1.34 2.23l.58 3.47a1 1 0 0 0 .99.84H6v10c0 1.1.9 2 2 2h8a2 2 0 0 0 2-2V10h2.15a1 1 0 0 0 .99-.84l.58-3.47a2 2 0 0 0-1.34-2.23z"/><line x1="8" y1="14" x2="16" y2="14"/></svg>
                  {%- when 'pantalones' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M16 3h3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-3M8 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h3"/><path d="M12 3v18"/><path d="M8 12h8"/></svg>
                  {%- when 'camperas' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20.38 3.46 16 2a4 4 0 0 1-8 0L3.62 3.46a2 2 0 0 0-1.34 2.23l.58 3.47a1 1 0 0 0 .99.84H6v10c0 1.1.9 2 2 2h8a2 2 0 0 0 2-2V10h2.15a1 1 0 0 0 .99-.84l.58-3.47a2 2 0 0 0-1.34-2.23z"/><path d="M8 10v10"/><path d="M16 10v10"/></svg>
                  {%- when 'botas' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M6 3v12c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V3"/><path d="M6 15v3c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2v-3"/><line x1="10" y1="3" x2="10" y2="15"/><line x1="14" y1="3" x2="14" y2="15"/></svg>
                  {%- when 'accesorios' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
                  {%- when 'sale' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="9" cy="9" r="2"/><circle cx="15" cy="15" r="2"/><path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"/></svg>
                  {%- else -%}
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="3" y="3" width="18" height="18" rx="2"/><path d="M9 9h6v6H9z"/></svg>
                {%- endcase -%}
              </div>
            {%- endif -%}
          </div>
          <h3 class="clean-cat-title">{{ cat_title }}</h3>
        </a>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .clean-cat-section {
    position: relative;
  }

  .clean-cat-header {
    max-width: 800px;
    margin: 0 auto 56px;
  }

  .clean-cat-header h2 {
    font-size: clamp(32px, 4vw, 42px);
    font-weight: 700;
    color: #111827;
    margin: 0 0 12px;
    letter-spacing: -0.5px;
  }

  .clean-cat-header p {
    font-size: 18px;
    color: #6B7280;
    margin: 0;
    line-height: 1.6;
  }

  .clean-cat-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  .clean-cat-card {
    background: #FFFFFF;
    border: 2px solid #E5E7EB;
    border-radius: 12px;
    padding: 32px 24px;
    text-decoration: none;
    text-align: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 220px;
    position: relative;
    overflow: hidden;
  }

  .clean-cat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #111827 0%, #4B5563 100%);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .clean-cat-card:hover {
    border-color: #111827;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  .clean-cat-card:hover::before {
    transform: scaleX(1);
  }

  .clean-cat-icon-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
  }

  .clean-cat-icon {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #F9FAFB;
    border-radius: 50%;
    border: 2px solid #E5E7EB;
    color: #111827;
    transition: all 0.3s ease;
  }

  .clean-cat-card:hover .clean-cat-icon {
    background: #111827;
    border-color: #111827;
    color: #FFFFFF;
    transform: rotate(5deg) scale(1.1);
  }

  .clean-cat-icon svg {
    width: 48px;
    height: 48px;
  }

  .clean-cat-image {
    width: 100%;
    max-width: 140px;
    margin-bottom: 20px;
    transition: transform 0.3s ease;
  }

  .clean-cat-card:hover .clean-cat-image {
    transform: scale(1.05);
  }

  .clean-cat-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .clean-cat-title {
    font-size: 20px;
    font-weight: 700;
    color: #111827;
    margin: 0;
    text-transform: capitalize;
    letter-spacing: -0.3px;
  }

  .clean-cat-card:hover .clean-cat-title {
    color: #000000;
  }

  @media (max-width: 1200px) {
    .clean-cat-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }
  }

  @media (max-width: 768px) {
    .clean-cat-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }
    
    .clean-cat-card {
      padding: 24px 20px;
      min-height: 180px;
    }
    
    .clean-cat-title {
      font-size: 18px;
    }

    .clean-cat-header {
      margin-bottom: 40px;
    }

    .clean-cat-header h2 {
      margin-bottom: 8px;
    }

    .clean-cat-header p {
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .clean-cat-card {
      min-height: 160px;
      padding: 20px 16px;
    }

    .clean-cat-image {
      max-width: 100px;
      margin-bottom: 16px;
    }
  }
</style>


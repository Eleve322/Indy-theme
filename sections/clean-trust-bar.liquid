{%- liquid
  assign container = section.settings.container
  assign bg_color = section.settings.bg_color
-%}

<div class="clean-trust-bar" style="background: {{ bg_color }}; padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;">
  <div class="{{ container }}">
    <div class="trust-grid">
      {%- for block in section.blocks -%}
        <div class="trust-item" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="trust-icon">{{ block.settings.icon }}</div>
          {%- endif -%}
          <div class="trust-content">
            <div class="trust-title">{{ block.settings.title }}</div>
            {%- if block.settings.subtitle != blank -%}
              <div class="trust-subtitle">{{ block.settings.subtitle }}</div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .clean-trust-bar {
    border-top: 1px solid #E5E7EB;
    border-bottom: 1px solid #E5E7EB;
  }

  .trust-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 32px;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 12px;
    text-align: left;
  }

  .trust-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #111827;
  }

  .trust-icon svg {
    width: 24px;
    height: 24px;
    stroke: currentColor;
    fill: none;
  }

  .trust-content {
    flex: 1;
  }

  .trust-title {
    font-size: 14px;
    font-weight: 600;
    color: #111827;
    margin-bottom: 2px;
  }

  .trust-subtitle {
    font-size: 13px;
    color: #6B7280;
  }

  @media (max-width: 1024px) {
    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
    }
  }

  @media (max-width: 640px) {
    .trust-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    
    .trust-item {
      justify-content: center;
      text-align: center;
      flex-direction: column;
    }
  }
</style>

